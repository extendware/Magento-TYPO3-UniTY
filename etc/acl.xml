<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::content">
                    <resource id="WebVision_Unity::header_typo3" title="TYPO3" sortOrder="50" >
                        <resource id="WebVision_Unity::typo3_pages" title="Pages" sortOrder="0" />
                        <resource id="WebVision_Unity::typo3_lists" title="Lists" sortOrder="0" />
                    </resource>
                </resource>

                <resource id="Magento_Backend::products" title="Products">
                    <resource id="WebVision_Unity::header_import" title="Import" sortOrder="50" >
                        <resource id="WebVision_Unity::import_profiles" title="Profiles" sortOrder="0" />
                    </resource>
                </resource>
                
                <resource id="WebVision_Unity::query_mapping" title="query_mapping" sortOrder="10">
                    <resource id="WebVision_Unity::query_mapping_save" title="Save query_mapping" sortOrder="10"/>
                    <resource id="WebVision_Unity::query_mapping_delete" title="Delete query_mapping" sortOrder="20"/>
                    <resource id="WebVision_Unity::query_mapping_update" title="Update query_mapping" sortOrder="30"/>
                    <resource id="WebVision_Unity::query_mapping_view" title="View query_mapping" sortOrder="40"/>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
