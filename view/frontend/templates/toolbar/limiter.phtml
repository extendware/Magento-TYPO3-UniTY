declare(strict_types=1);

use Magento\Catalog\Block\Product\ProductList\Toolbar;
use Magento\Framework\Escaper;
use WebVision\Unity\ViewModel\HelperData;

/** @var $viewModelHelper Helper */
$viewModelHelper = $viewModels->require(HelperData::class);
/** @var Toolbar $block */
/** @var Escaper $escaper */
?>
<div class="hidden xl:block field limiter items-center justify-middle text-primary-lighter text-center">
    <div class="control inline-block">
        <select data-role="limiter"
                class="border-none bg-transparent text-sm"
                aria-label="<?= $escaper->escapeHtmlAttr(__('Show')) ?>"
                onchange='this.options[this.selectedIndex].value && (window.location = this.options[this.selectedIndex].value);'
                >
            <?php foreach ($block->getAvailableLimit() as $_key => $_limit):?>
                <option value="<?= $escaper->escapeHtmlAttr($viewModelHelper->generateLimiterUrl($_key)) ?>"
                    <?php if ($block->isLimitCurrent($_key)):?>
                        selected="selected"
                    <?php endif ?>>
                    <?= $escaper->escapeHtml(__('Show')) ?> <?= $escaper->escapeHtml($_limit) ?> <?= $escaper->escapeHtml(__('per page')) ?>
                </option>
            <?php endforeach; ?>
        </select>
    </div>
</div>
